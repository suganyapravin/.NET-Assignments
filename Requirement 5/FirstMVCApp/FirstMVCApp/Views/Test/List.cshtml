@model List<FirstMVCApp.ViewModel.UserViewModel>
<!DOCTYPE html>
<html>
<head>
<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
</style>
</head>
<body>

<h2>List of Users</h2>

    <table style="width: 75%" >
  <tr>
    <th>FirstName</th>
     <th>LastName</th>
    <th>Email</th>
    <th>Phone Number</th>
    <th>Gender</th>
  </tr>
         @foreach(var i in Model)
         {
            <tr>
                <td>@Html.DisplayFor(m => i.FirstName)</td>
                <td>@Html.DisplayFor(m => i.LastName)</td>
                <td>@Html.DisplayFor(m => i.EmailID)</td>
                <td>@Html.DisplayFor(m => i.PhoneNumber)</td>               
                @if (i.Gender == 'm')
                {
                    <td>Male</td>
                }
                else
                {
                    <td>Female</td>
                }               
        </tr>
        }     

</table>
    <button type="button" id="loadData"  onclick="location.href='@Url.Action("Index", "Test")'">
        Back
    </button>
</body>
</html>



